{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "prod": "npm run build && php artisan optimize && php artisan serve --host=0.0.0.0 --port=8000",
        "dev-server": "concurrently --kill-others \"php artisan serve --ansi --port=8000 --raw\" \"npm run dev\"",
        "lan-serve": "concurrently --kill-others \"php artisan serve --ansi --host=0.0.0.0 --port=8000 --raw\" \"npm run dev -- --host\"",
        "network-serve": "concurrently --kill-others \"php -S 0.0.0.0:8000 -t public\" \"npm run dev\""
    },
    "devDependencies": {
        "axios": "^1.6.4",
        "concurrently": "^9.2.1",
        "laravel-vite-plugin": "^1.0",
        "vite": "^7.3.1"
    },
    "dependencies": {
        "@alpinejs/collapse": "^3.15.8",
        "@tailwindcss/vite": "^4.1.18",
        "alpinejs": "^3.15.7",
        "tailwindcss": "^4.1.18",
        "tailwindcss-animate": "^1.0.7"
    }
}
